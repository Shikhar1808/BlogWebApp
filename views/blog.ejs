<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-3">
        <img src="<%= blog.createdBy.profilePicURL %>" alt="" width="100px"> Created By: <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="coverImage" width="200px">
        <p><%= blog.body %></p>
    </div>

    <div class="container mt-3">
        <% if(locals.user){%>
            <h3>Your Comment</h3>
            <form action="/blog/comment/<%= blog._id %>" method="POST">
                <div class="mb-3">
                    <input type="text" class="form-control" id="content" aria-describedby="content" name="content" placeholder="Enter your comment">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </form>
        <%} %>
    </div>

    <div class="container mt-3">
        <h3>Comments: <%= comments.length %></h3>
        <% comments.forEach(comment => { %>
            <div class="card">
                <div class="card-body">
                    <img src="<%= comment.createdBy.profilePicURL %>" alt="" width="100px"> Comment By: <%= comment.createdBy.fullName %>
                    <br>
                    <br>
                    <p><%= comment.content %></p>
                </div>
            </div>
            <br>
        <% }) %>.
    </div>


    <%- include('./partials/script') %>
</body>

</html>